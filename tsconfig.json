{
    "compilerOptions": {
        "jsx": "react", //ts代码支持jsx语法
        // "outDir": "./dist/",
        // "noImplicitAny": true,
        // "module": "es6",
        // "target": "es5",
        // "jsx": "react",
        // "allowJs": true,
        // "moduleResolution": "node",
        // "removeComments": true,
        "sourceMap": true,
        "lib": [
            "es2022",
            "DOM" //ts代码中才能使用document变量
        ],
        "module": "commonjs",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "types": [
            "react/next",
            "react-dom/next"
        ] //新版react(18.2)对createroot语法的支持
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "include": [
        "src/**/*",
        "types.d.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}